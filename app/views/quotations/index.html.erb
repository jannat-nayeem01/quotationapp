<p style="color: green"><%= notice %></p>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<h1 style="color:red;text-align:center">Quotations Main Page</h1>

<h3>Import Quotations from XML</h3>
<%= form_tag(import_xml_external_quotations_path, method: :post) do %>

  <div class="form_row">
    <%= label_tag :xml_url, 'XML URL:' %>
    <%= text_field_tag :xml_url, nil, placeholder: 'Enter XML URL' %>
  </div>
  <div class="form_row">
    <%= submit_tag 'Import' %>
  </div>
<% end %>
 <hr/>
 <%= form_tag(import_xml_quotations_path, method: :post) do %>
  <div class="form_row">
    <%= submit_tag 'Click to Import from Local xml File' %>
  </div>
<% end %>
 <hr/>
 <br/>
<h2>Please Search Here</h2>
<%= form_tag(search_quotations_path, method: :get) do %>
  <div class="form_row">
    <%= text_field_tag :query, params[:query], placeholder: 'Enter a word to search' %>
    <%= submit_tag 'Search' %>
  </div>
  <br/>
  <hr/>
  <br/>
<% end %>

<hr/>
<%= link_to "Create New Quotation", new_quotation_path %>
<hr/>

<% if @query.present? %>
<div>
<%= link_to "Back", quotations_path %>
</div>
  <h2>Search Results for "<%= @query %>"</h2>

<% end %>
<h2>Quotation List:</h2>

<% @quotations.each do |quotation| %>
  <%= render quotation %>
<% end %>










