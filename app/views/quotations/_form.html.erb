
<%= form_for @quotation, url: { action: "create" } do |form| %>
    <div id="error_explanation">
      <% if @quotation.errors.any? %>
        <h2><%= pluralize(@quotation.errors.count, "error") %> prohibited this quotation from being saved:</h2>
        <ul>
          <% @quotation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end  %>
<fieldset>
<legend>Enter details</legend>
<div class="form_row">
<%= form.label :author_name %>
<%= form.text_field :author_name, :size => 20, :maxlength => 40 %>
</div>
<br> 
<div class="form_row">
<%= form.label :category %>
<%= form.select :category, options_for_select(@existing_categories, @quotation.category), include_blank: 'New category' %>
  </div>

<br> 
<div class="form_row">
<%= form.label :quote %>
<%= form.text_area :quote, :rows => 2, :cols => 40, :maxlength => 500 %>
</div>
<br> 
</fieldset>
<p>
<div class="form_row">
<%= form.submit 'Create' %>
</div>
</p>
<% end %>
